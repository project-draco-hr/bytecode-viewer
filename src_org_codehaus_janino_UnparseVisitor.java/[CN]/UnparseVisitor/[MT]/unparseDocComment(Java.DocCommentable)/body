{
  String optionalDocComment=dc.getDocComment();
  if (optionalDocComment != null) {
    this.pw.print("/**");
    BufferedReader br=new BufferedReader(new StringReader(optionalDocComment));
    for (; ; ) {
      String line;
      try {
        line=br.readLine();
      }
 catch (      IOException e) {
        throw new JaninoRuntimeException(null,e);
      }
      if (line == null)       break;
      this.pw.println(line);
      this.pw.print(" *");
    }
    this.pw.println("/");
  }
}
