{
  if (!sourcePane) {
    sp.setResizeWeight(0);
  }
 else   if (!bytecodePane) {
    sp.setResizeWeight(1);
  }
 else {
    sp.setResizeWeight(0.5);
  }
  if (hexPane) {
    if (!sourcePane && !bytecodePane)     sp2=setDividerLocation(sp2,0);
 else     sp2=setDividerLocation(sp2,0.7);
  }
 else {
    sp2=setDividerLocation(sp2,1);
  }
}
