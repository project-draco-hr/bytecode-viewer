{
  int from=0;
  List<File> l=new ArrayList();
  for (; ; ) {
    int to=s.indexOf(File.pathSeparatorChar,from);
    if (to == -1) {
      if (from != s.length())       l.add(new File(s.substring(from)));
      break;
    }
    if (to != from)     l.add(new File(s.substring(from,to)));
    from=to + 1;
  }
  return (File[])l.toArray(new File[l.size()]);
}
